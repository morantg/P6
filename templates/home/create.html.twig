{% extends 'base.html.twig' %}

{% form_theme formFigure 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
   <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}


{% block body %}

<h1>Creation d'une Figure</h1>

{{ form_start(formFigure)}}

    {{ form_row(formFigure.nom) }}
    {{ form_row(formFigure.description) }}
    {{ form_row(formFigure.image_une) }}
    {{ form_row(formFigure.groupe) }}

    <ul class="media" data-prototype="{{ form_widget(formFigure.media.vars.prototype)|e('html_attr') }}">
        {% for medium in formFigure.media %}
            <li>{{ form_widget(formFigure.media.vars.prototype.url)|e }}</li>
            <li>{{ form_widget(formFigure.media.vars.prototype.format)|e }}</li>
        {% endfor %}
    </ul>

{{ form_end(formFigure)}}


{% endblock %}