{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Connexion</h1>
    {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey | trans(error.messagedata, 'security') }}
      </div>
    {% endif %}
    <form action="{{ path('user_login') }}" method="post">
        <div class="form-group">
            <input placeholder="email ..." required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Connexion</button>
        </div>
    </form>
</div>    

{% endblock %}